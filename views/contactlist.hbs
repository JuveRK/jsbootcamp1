<!DOCTYPE html>
<html>
  <head>
    <title>Code Fellows Contact Manager</title>

    <!-- Bring In jQuery -->
    <script src="/jquery.js"></script>

    <!-- Bring In Bootstrap -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-theme.min.css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>

    <!-- font-awesome -->
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.1/css/font-awesome.css" rel="stylesheet">

    <!--- tablesorter 2 -->
    <script type="text/javascript" src="/jquery.tablesorter.js"></script>

    <!-- Application Styles and Scripts -->
    <link rel="stylesheet" href="/jsbootcamp.css">
    <script src="/contactlist.js"></script>
    <script>
      $(document).ready(function() {
        makeContactRowClickable();
        $(".table").tablesorter();
      });
    </script>
  </head>

  <body>
    <div class="page-header">
      <h1>Code Fellows Contact Manager <small><i class="fa fa-code-fork"></i> rkj edition</small></h1>
    </div>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Last Name</th>
          <th>First Name</th>
          <th>Nickname</th>
          <th>Company</th>
        </tr>
      </thead>

      <tbody>
        {{#each contacts}}
          <tr data-contact-guid="{{guid}}">
            <td>{{lastName}}</td>
            <td>{{firstName}}</td>
            <td>{{nickname}}</td>
            <td>{{company}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </body>
</html>
